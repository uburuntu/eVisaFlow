{
  "name": "evisa-flow",
  "version": "1.0.0",
  "description": "Automated UK eVisa share code + PDF retrieval via Playwright.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "evisa-flow": "bin/evisa-flow.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "LICENSE",
    "README.md",
    "config.sample.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --sourcemap",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --sourcemap --watch",
    "lint": "eslint . --max-warnings=0",
    "start": "node ./bin/evisa-flow.js",
    "prepack": "npm run build",
    "snapshots": "node ./scripts/snapshot.js",
    "fixtures": "node ./scripts/refresh-fixtures.js",
    "test": "npm run build && node --test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "evisa",
    "govuk",
    "share-code",
    "immigration",
    "playwright",
    "automation",
    "uk",
    "pdf"
  ],
  "author": "Ramzan Bekbulatov",
  "repository": {
    "type": "git",
    "url": "https://github.com/uburuntu/eVisaFlow.git"
  },
  "bugs": {
    "url": "https://github.com/uburuntu/eVisaFlow/issues"
  },
  "homepage": "https://github.com/uburuntu/eVisaFlow#readme",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.2",
    "pino": "^10.3.0",
    "playwright": "^1.58.0",
    "prompts": "^2.4.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
